<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.547"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="24dp" app:layout_constraintVertical_bias="0.305" android:id="@+id/textView2"/>
    <Button
            android:text="@string/iniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginTop="78dp" android:layout_marginBottom="46dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.547"/>
    <ImageView
            android:layout_width="256dp"
            android:layout_height="0dp" tools:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView2"
            app:srcCompat="@color/colorAccent" android:background="#000000"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="229dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Love You"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/button" android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginBottom="90dp" app:layout_constraintBottom_toTopOf="@+id/imageView2"/>

</android.support.constraint.ConstraintLayout>